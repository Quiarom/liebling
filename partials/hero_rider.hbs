{{!--
If the template in question has a background image, then we render responsive image styles
for it, and apply those styles to the <header> tag.
--}}

{{#if background}}
  <section class="m-hero with-picture" data-aos="fade">
    <div class="m-hero__picture {{#is "post"}}in-post{{/is}}">
      <img
        srcset="
          {{asset 'images/growth-ridery.png' background size="s"}} 300w,
          {{asset 'images/growth-ridery.png' background size="m"}} 600w,
          {{asset 'images/growth-ridery.png' background size="l"}} 1000w,
          {{asset 'images/growth-ridery.png' background size="xl"}} 2000w
        "
        sizes="(max-width: 600px) 600px, (max-width: 1000px) 1000px, 2000px"
        src="{{asset 'growth-ridery.png' background size="l"}}"
        alt="{{feature_image_alt}}"
      />
    </div>
{{else}}
  <section class="m-hero no-picture {{#is "post"}}in-post{{/is}}" data-aos="fade">
{{/if}}
